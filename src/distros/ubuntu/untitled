cp /etc/apt/sources.list /mnt/etc/apt/
for dir in sys dev proc ; do mount --rbind /$dir /mnt/$dir && mount --make-rslave /mnt/$dir ; done
cp /etc/resolv.conf /mnt/etc/
croot /mnt /bin/bash
