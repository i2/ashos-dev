



def choose_distro_to_switch():
    while True:
        print("Type the name of a distro to switch to: (type 'list' to list them)")
        next_distro = input("> ")
        if next_distro == "q":
            break
        elif next_distro == "list":
            os.system("cat /home/me/Downloads/meeeeeeeeeeeee/awk-test.txt | awk 'BEGIN { FS = "'"'" === "'"'" } ; { print $1 }' | less")
        elif next_distro in subprocess.check_output("cat /home/me/Downloads/meeeeeeeeeeeee/awk-test.txt | awk 'BEGIN { FS = "'"'" === "'"'" } ; { print $1 }'", shell=True).decode('utf-8').strip():
            return subprocess.check_output(f"cat /home/me/Downloads/meeeeeeeeeeeee/awk-test.txt | grep {next_distro} | awk '{{print $(NF)}}'")
            break
        else:
            print("Invalid distro!")
            continue


