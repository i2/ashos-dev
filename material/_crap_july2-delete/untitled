def choose_distro_to_switch():
    while True:
        print("Type the name of a distro to switch to: (type 'list' to list them)")
        next_distro = input("> ")
        if next_distro == "q":
            break
        elif next_distro == "list":
            os.system("cat ~/Downloads/meeeeeeeeeeeee/awk-test.txt | awk 'BEGIN { FS = "'"'" === "'"'" } ; { print $1 }' | less")
        elif next_distro in subprocess.check_output("cat ~/Downloads/meeeeeeeeeeeee/awk-test.txt | awk 'BEGIN { FS = "'"'" === "'"'" } ; { print $1 }'", shell=True).decode('utf-8').strip():
            
            return next_distro
            break
        else:
            print("Invalid distro!")
            continue
